# 🌍 Environment Configuration for Espen D6 MCP Server

# 🔐 Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-here

# 📊 Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# 🏫 D6 API Configuration (v2 - Integrate API)
# IMPORTANT: Use the correct D6 Integrate API base URL
D6_API_BASE_URL=https://integrate.d6plus.co.za/api/v2
D6_API_USERNAME=your-d6-username
D6_API_PASSWORD=your-d6-password
D6_REQUEST_TIMEOUT=30000

# 💾 Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_DEFAULT=3600

# 📝 Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 🚦 Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 🔄 Sync Configuration
SYNC_INTERVAL_MINUTES=15
SYNC_RETRY_ATTEMPTS=3
SYNC_BATCH_SIZE=100
SYNC_ON_STARTUP=false

# 📊 Performance Configuration
CACHE_TTL_CONTEXT=300
CACHE_TTL_LEARNER_DATA=1800
CACHE_TTL_MARKS=900 