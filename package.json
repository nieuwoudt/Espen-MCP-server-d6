{
  "name": "espen-d6-mcp-server",
  "version": "1.0.0",
  "description": "Multi-tenant MCP server integrating Espen.ai with D6 School Information System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:simple": "tsx src/index-simple.ts",
    "dev:auth": "tsx src/index-auth.ts",
    "dev:phase4": "tsx src/index-phase4.ts",
    "test:d6": "tsx scripts/test-d6-connection.ts",
    "test:d6-simple": "tsx scripts/test-d6-simple.ts",
    "test:sandbox": "tsx scripts/test-d6-sandbox.ts",
    "test:mcp": "tsx scripts/test-mcp-server.ts",
    "test:json": "tsx scripts/test-json-output.ts",
    "test:demo": "tsx scripts/test-d6-demo.ts",
    "test:endpoints": "tsx scripts/test-d6-endpoints.ts",
    "test:working": "tsx scripts/test-d6-working.ts",
    "test:modes": "tsx scripts/test-both-modes.ts",
    "demo:sandbox": "node scripts/demo-sandbox.js",
    "mcp": "tsx src/mcp-server.ts",
    "mcp:hybrid": "tsx src/mcp-server-hybrid.ts",
    "mcp:production": "D6_PRODUCTION_MODE=true tsx src/mcp-server.ts",
    "start": "node dist/index.js",
    "start:remote": "tsx src/mcp-server-remote.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "d6",
    "school-management",
    "espen",
    "ai-education",
    "multi-tenant"
  ],
  "author": "Espen.ai",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@modelcontextprotocol/sdk": "^1.13.1",
    "@supabase/supabase-js": "^2.39.3",
    "@vercel/mcp-adapter": "^0.11.1",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "fastify": "^4.24.3",
    "node-cron": "^3.0.3",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "zod": "^3.25.68"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.4",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vercel/node": "^5.3.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/espen-ai/espen-d6-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/espen-ai/espen-d6-mcp-server/issues"
  },
  "homepage": "https://github.com/espen-ai/espen-d6-mcp-server#readme"
}
