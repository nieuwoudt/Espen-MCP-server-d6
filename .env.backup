# 🌍 Environment Configuration for Espen D6 MCP Server

# 🔐 Server Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-here

# 📊 Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# 🏫 D6 API Configuration
D6_API_BASE_URL=https://your-school.d6.co.za/api
D6_API_USERNAME=your-d6-username
D6_API_PASSWORD=your-d6-password
D6_REQUEST_TIMEOUT=30000

# 💾 Redis Configuration (optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_TTL_DEFAULT=3600

# 📝 Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 🚦 Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 🔄 Sync Configuration
SYNC_INTERVAL_MINUTES=15
SYNC_RETRY_ATTEMPTS=3
SYNC_BATCH_SIZE=100

# 📊 Performance Configuration
CACHE_TTL_CONTEXT=300
CACHE_TTL_LEARNER_DATA=1800
CACHE_TTL_MARKS=900 